<Window x:Class="POS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" Background="Gray">
    <StackPanel Margin="20" HorizontalAlignment="Center">
        
        <TextBlock Text="Employee ID" FontSize="20" FontWeight="Medium"  Margin="0,20,0,0"/>
        <TextBox Name="txtEmpID" Width="200" Height="30" />

        <TextBlock Text="Password" FontSize="20" FontWeight="Medium" Margin="0,10,0,0" />
        <PasswordBox Name="txtPassword" Width="200" Height="30" />

        <Button Name="btnLogin" Content="LOGIN" Width="100" Height="40" Margin="0,30,0,0" FontSize="20"
                FontWeight="Bold" Click="BtnLogin_Click"/>


    </StackPanel>
</Window>
